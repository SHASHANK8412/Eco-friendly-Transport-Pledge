rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Pledges collection - users can create and read their own pledges
    match /pledges/{pledgeId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Certificates collection - users can read their own certificates
    match /certificates/{certificateId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // AI interactions collection - users can read/write their own AI chat history
    match /aiInteractions/{interactionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // User progress tracking
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public leaderboard (read-only for all authenticated users)
    match /leaderboard/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only server-side functions can write to leaderboard
    }
    
    // Public pledge statistics (read-only)
    match /statistics/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only server-side functions can update statistics
    }
  }
}